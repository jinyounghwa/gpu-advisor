# GPU Advisor Environment Configuration
# Copy this file to .env and fill in the values

# Server
HOST=0.0.0.0
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Model checkpoint path (default: alphazero_model.pth)
MODEL_CHECKPOINT_PATH=alphazero_model.pth

# MCTS settings
MCTS_NUM_SIMULATIONS=50

# Training defaults
TRAINING_NUM_STEPS=500
TRAINING_LEARNING_RATE=1e-4
TRAINING_BATCH_SIZE=32

# Data directories
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
