# GPU Advisor Environment Configuration
# Copy this file to .env and fill in the values

# Server
HOST=0.0.0.0
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Model checkpoint path (default: alphazero_model.pth)
MODEL_CHECKPOINT_PATH=alphazero_model.pth

# MCTS settings
MCTS_NUM_SIMULATIONS=50

# Training defaults
TRAINING_NUM_STEPS=500
TRAINING_LEARNING_RATE=1e-4
TRAINING_BATCH_SIZE=32

# Data directories
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed

# =========================
# Security & Auth
# =========================
# one of: none | api_key | jwt | hybrid
GPU_ADVISOR_AUTH_MODE=none

# API keys (used when auth_mode=api_key or hybrid)
GPU_ADVISOR_API_KEYS=

# JWT user credentials
# format: user1:pass1,user2:pass2
GPU_ADVISOR_AUTH_USERS=
# fallback single user if AUTH_USERS is empty
GPU_ADVISOR_AUTH_DEFAULT_USER=admin
GPU_ADVISOR_AUTH_DEFAULT_PASSWORD=change-me

# JWT signing
GPU_ADVISOR_JWT_SECRET=replace-with-long-random-secret
GPU_ADVISOR_JWT_EXP_SECONDS=3600

# Rate limiting
GPU_ADVISOR_RATE_LIMIT_PER_MINUTE=60

# =========================
# Persistence
# =========================
# one of: sqlite | postgres
GPU_ADVISOR_DB_BACKEND=sqlite
GPU_ADVISOR_DB_PATH=data/processed/gpu_advisor.db

# only needed when DB_BACKEND=postgres
GPU_ADVISOR_POSTGRES_DSN=

# =========================
# Sentiment
# =========================
# one of: auto | transformers | rule
GPU_ADVISOR_SENTIMENT_BACKEND=auto
GPU_ADVISOR_SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
